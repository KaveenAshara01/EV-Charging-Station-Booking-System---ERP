<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Validation Message Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="16dp"
            android:backgroundTint="#E0F7FA">

            <TextView
                android:id="@+id/txtValidationMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR validation result"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#00796B"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reservation Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerVertical"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtReservationId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation ID:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtOwnerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner ID:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtStationId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station ID:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtSlotId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slot ID:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtReservationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation Time:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtApprovedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved By:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtApprovedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved At:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="0dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Complete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Completed"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#4CAF50"/>

    </LinearLayout>
</ScrollView>
