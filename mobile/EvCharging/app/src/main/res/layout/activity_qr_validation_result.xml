<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtValidationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR validation result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtReservationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation ID:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtOwnerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner ID:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtStationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station ID:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtSlotId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot ID:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtReservationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Time:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtApprovedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved By:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtApprovedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved At:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Completed"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
